{% extends "index" %}

{% block styles %}
	<style>
		body,
		html {
			height: 100%;
		}
		.wrapper {
			align-items: center;
		}
	</style>
{% endblock %}

{% block content %}

	<main class="c-forget">
		<form method="post" accept-charset="UTF-8">
			{{ csrfInput() }}
			{{ actionInput('users/send-password-reset-email') }}

			<label for="loginName" class="c-forget__label">Email</label>
			{{ input('text', 'loginName', loginName ?? craft.app.user.rememberedUsername, { id: 'loginName', autocomplete: 'username', placeholder: 'Type your email here', class: 'c-forget__input' }) }}

			{% if errors is defined %}
				{{ ul(errors, {class: 'errors'}) }}
			{% endif %}

			<button>Send Reset Email</button>
		</form>
	</main>

{% endblock %}
